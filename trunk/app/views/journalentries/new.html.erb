<h1>New journalentry</h1>

<%= error_messages_for :journalentry %>

<% form_for(@journalentry) do |f| %>
  <p>
    <b>Author</b><br />
    <%= f.text_field :author %>
  </p>

  <p>
    <b>Entrydate</b><br />
    <%= f.datetime_select :entrydate %>
  </p>

  <p>
    <b>Contents</b><br />
    <%= f.text_area :contents %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', journalentries_path %>
